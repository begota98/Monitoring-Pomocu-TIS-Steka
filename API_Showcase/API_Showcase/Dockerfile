FROM mcr.microsoft.com/dotnet/aspnet:9.0.0 AS base
USER $APP_UID
WORKDIR /app
EXPOSE 8080
EXPOSE 8081

FROM mcr.microsoft.com/dotnet/sdk:9.0.0 AS build
ARG BUILD_CONFIGURATION=Release
WORKDIR /src
COPY ["API_Showcase/API_Showcase.csproj", "API_Showcase/"]
RUN dotnet restore "API_Showcase/API_Showcase.csproj"
COPY . .
WORKDIR "/src/API_Showcase"
RUN dotnet build "API_Showcase.csproj" -c $BUILD_CONFIGURATION -o /app/build

FROM build AS publish
ARG BUILD_CONFIGURATION=Release
RUN dotnet publish "API_Showcase.csproj" -c $BUILD_CONFIGURATION -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "API_Showcase.dll"]
